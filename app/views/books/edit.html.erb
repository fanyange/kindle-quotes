<h1>Edit Book</h1>
<h2 class="ui dividing header"><%= @book.title %></h2>
<p><%= image_tag @book.image_url %></p>
<%= form_for @book, html: { class: "ui form" } do |f| %>
  <div class='field'><%= f.label "Upload A image for this book" %></div>
  <div class='field'><%= f.file_field :image %></div>
  <div class='field'><%= f.submit %></div>
<% end %>
